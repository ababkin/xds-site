<apply template="/layout/base">
  <div class="show_panel">
    <div class="source">
      <div class="title"><source_title/></div>
      <div class="description"><source_description/></div>
      <a href="${website_url}"><div class="website_url"><source_website_url/></div></a>

      <h3>Datasets:</h3>
      <div class="datasets">
        <source_datasets>
          <div class="dataset">
            <a href="${dataset_url}">
              <div class="title"><dataset_title/></div>
            </a>
            <div class="description"><dataset_description/></div>
          </div>
        </source_datasets>
      </div>
      
    </div>
  </div>

</apply>
